{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Quiz",
  "scopeName": "source.quiz",
  "fileTypes": [
    "quiz"
  ],
  "patterns": [
    {
      "include": "#quiz-structure"
    }
  ],
  "repository": {
    "quiz-structure": {
      "patterns": [
        {
          "include": "#metadata"
        },
        {
          "include": "#questions"
        },
        {
          "include": "#json-literal"
        }
      ]
    },
    "metadata": {
      "patterns": [
        {
          "match": "\\b(metadata|title|description|version|author|created_date|modified_date|tags|difficulty|time_limit)\\b",
          "name": "variable.other.property.quiz"
        }
      ]
    },
    "questions": {
      "patterns": [
        {
          "match": "\\b(questions|type|text|options|correct_answers|explanation|points|allow_multiple)\\b",
          "name": "variable.other.property.quiz"
        },
        {
          "match": "\\b(multiple_choice)\\b",
          "name": "support.type.quiz"
        }
      ]
    },
    "json-literal": {
      "patterns": [
        {
          "include": "#string"
        },
        {
          "include": "#number"
        },
        {
          "include": "#boolean"
        },
        {
          "include": "#null"
        },
        {
          "include": "#array"
        },
        {
          "include": "#object"
        }
      ]
    },
    "string": {
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double.quiz",
          "patterns": [
            {
              "match": "\\\\.",
              "name": "constant.character.escape.quiz"
            }
          ]
        }
      ]
    },
    "number": {
      "match": "-?(?:0|[1-9]\\d*)(?:\\.\\d+)?(?:[eE][+-]?\\d+)?",
      "name": "constant.numeric.quiz"
    },
    "boolean": {
      "match": "\\b(true|false)\\b",
      "name": "constant.language.boolean.quiz"
    },
    "null": {
      "match": "\\bnull\\b",
      "name": "constant.language.null.quiz"
    },
    "array": {
      "begin": "\\[",
      "end": "\\]",
      "name": "meta.array.quiz",
      "patterns": [
        {
          "include": "#json-literal"
        }
      ]
    },
    "object": {
      "begin": "\\{",
      "end": "\\}",
      "name": "meta.object.quiz",
      "patterns": [
        {
          "include": "#quiz-structure"
        }
      ]
    }
  }
}