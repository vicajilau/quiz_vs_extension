{
  "Quiz Template": {
    "prefix": "quiz",
    "body": [
      "{",
      "  \"metadata\": {",
      "    \"title\": \"$1\",",
      "    \"description\": \"$2\",",
      "    \"version\": \"1.0.0\",",
      "    \"author\": \"$3\"",
      "  },",
      "  \"questions\": [",
      "    $0",
      "  ]",
      "}"
    ],
    "description": "Basic quiz template"
  },
  "Multiple Choice Question": {
    "prefix": "mcq",
    "body": [
      "{",
      "  \"type\": \"multiple_choice\",",
      "  \"text\": \"$1\",",
      "  \"options\": [\"$2\", \"$3\", \"$4\", \"$5\"],",
      "  \"correct_answers\": [$6]$0",
      "}"
    ],
    "description": "Multiple choice question template"
  },
  "Multiple Choice Question with Multiple Answers": {
    "prefix": "mcq-multi",
    "body": [
      "{",
      "  \"type\": \"multiple_choice\",",
      "  \"text\": \"$1\",",
      "  \"options\": [\"$2\", \"$3\", \"$4\", \"$5\"],",
      "  \"correct_answers\": [$6, $7]$0",
      "}"
    ],
    "description": "Multiple choice question with multiple correct answers"
  },
  "Single Choice Question": {
    "prefix": "scq",
    "body": [
      "{",
      "  \"type\": \"single_choice\",",
      "  \"text\": \"$1\",",
      "  \"options\": [\"$2\", \"$3\", \"$4\", \"$5\"],",
      "  \"correct_answers\": [$6]$0",
      "}"
    ],
    "description": "Single choice question template"
  },
  "True/False Question": {
    "prefix": "tf",
    "body": [
      "{",
      "  \"type\": \"true_false\",",
      "  \"text\": \"$1\",",
      "  \"options\": [\"True\", \"False\"],",
      "  \"correct_answers\": [${2|0,1|}]$0",
      "}"
    ],
    "description": "True/False question template"
  },
  "True/False Question (Spanish)": {
    "prefix": "vf",
    "body": [
      "{",
      "  \"type\": \"true_false\",",
      "  \"text\": \"$1\",",
      "  \"options\": [\"Verdadero\", \"Falso\"],",
      "  \"correct_answers\": [${2|0,1|}]$0",
      "}"
    ],
    "description": "True/False question template in Spanish"
  },
  "Question with Explanation": {
    "prefix": "q-explain",
    "body": [
      "{",
      "  \"type\": \"${1|multiple_choice,single_choice,true_false|}\",",
      "  \"text\": \"$2\",",
      "  \"options\": [\"$3\", \"$4\", \"$5\", \"$6\"],",
      "  \"correct_answers\": [$7],",
      "  \"explanation\": \"$8\"$0",
      "}"
    ],
    "description": "Question with explanation"
  },
  "Question with Points and Explanation": {
    "prefix": "q-full",
    "body": [
      "{",
      "  \"type\": \"${1|multiple_choice,single_choice,true_false|}\",",
      "  \"text\": \"$2\",",
      "  \"options\": [\"$3\", \"$4\", \"$5\", \"$6\"],",
      "  \"correct_answers\": [$7],",
      "  \"explanation\": \"$8\",",
      "  \"points\": ${9:1}$0",
      "}"
    ],
    "description": "Complete question with explanation and points"
  },
  "Metadata Block": {
    "prefix": "metadata",
    "body": [
      "\"metadata\": {",
      "  \"title\": \"$1\",",
      "  \"description\": \"$2\",",
      "  \"version\": \"${3:1.0.0}\",",
      "  \"author\": \"$4\",",
      "  \"difficulty\": \"${5|easy,medium,hard|}\",",
      "  \"time_limit\": ${6:30},",
      "  \"tags\": [\"$7\"]$0",
      "}"
    ],
    "description": "Complete metadata block with optional fields"
  }
}