{
  "name": "quiz-file-support",
  "displayName": "QUIZ File Support",
  "description": "VS Code extension for .quiz files with JSON validation and schema support",
  "version": "0.1.0",
  "publisher": "vicajilau",
  "icon": ".github/assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/vicajilau/quiz_vs_extension.git"
  },
  "keywords": [
    "quiz",
    "json",
    "validation",
    "education",
    "assessment",
    "multiple choice",
    "language support"
  ],
  "license": "MIT",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Linters"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "languages": [
      {
        "id": "quiz",
        "aliases": [
          "QUIZ",
          "quiz",
          "Quiz"
        ],
        "extensions": [
          ".quiz"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./.github/assets/icon.png",
          "dark": "./.github/assets/icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "quiz",
        "scopeName": "source.quiz",
        "path": "./syntaxes/quiz.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[quiz]": {
        "editor.defaultFormatter": "vscode.json-language-features"
      },
      "files.associations": {
        "*.quiz": "quiz"
      }
    },
    "jsonValidation": [
      {
        "fileMatch": "*.quiz",
        "url": "./schemas/quiz-schema.json"
      }
    ],
    "commands": [
      {
        "command": "quiz-file-support.validateFile",
        "title": "Validate Quiz File",
        "category": "QUIZ",
        "icon": {
          "light": "./.github/assets/icon.png",
          "dark": "./.github/assets/icon.png"
        }
      },
      {
        "command": "quiz-file-support.createSample",
        "title": "Create Sample Quiz",
        "category": "QUIZ"
      },
      {
        "command": "quiz-file-support.diagnoseDetection",
        "title": "Diagnose Quiz File Detection",
        "category": "QUIZ"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .quiz",
          "command": "quiz-file-support.validateFile",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .quiz",
          "command": "quiz-file-support.validateFile",
          "group": "navigation"
        }
      ]
    },
    "snippets": [
      {
        "language": "quiz",
        "path": "./snippets/quiz.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "QUIZ Configuration",
      "properties": {
        "quiz.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable quiz file validation"
        },
        "quiz.validation.strictMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable strict validation mode"
        },
        "quiz.validation.showWarnings": {
          "type": "boolean",
          "default": true,
          "description": "Show validation warnings"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "npm run compile-tests && vscode-test",
    "test:watch": "npm run watch-tests",
    "vsce:package": "vsce package",
    "vsce:publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "ajv": "^8.12.0"
  },
  "bugs": {
    "url": "https://github.com/vicajilau/quiz_vs_extension/issues"
  },
  "homepage": "https://github.com/vicajilau/quiz_vs_extension#readme"
}